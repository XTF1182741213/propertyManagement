<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<constant name="struts.multipart.saveDir" value="D:\"></constant>

	<package name="qiuyongchen" extends="struts-default">


		<action name="login"
			class="com.ilovecl.myproperty.struts.action.StudentLoginAction"
			method="login">
		</action>

		<!-- repairingManager -->
		<action name="studentRanking_*"
			class="studentRankingAction" method="{1}">
			<result name="success">adminStudentRanking_ui.jsp</result>
		</action>

		<!-- repairingManager -->
		<action name="studentManagerAction_*"
			class="StudentManagerAction" method="{1}">
			<result name="success">adminStudentManager_ui.jsp</result>
		</action>

		<!-- repairingManager -->
		<action name="repairingManagerAction_*"
			class="repairingManagerAction" method="{1}">
			<result name="success">adminRepairingManager_ui.jsp</result>
		</action>

		<!-- remindRepairOrder -->
		<action name="remindRepairOrder_*"
			class="remindRepairOrderAction" method="{1}">
			<result name="success">adminRemindRepair_ui.jsp</result>
		</action>
		
		<!-- repairOrder -->
		<action name="repairOrder_*"
			class="repairOrderAction" method="{1}">
			<result name="success">adminFinishRepair_ui.jsp</result>
		</action>
		
		<!-- repairOrder -->
		<action name="repairOrder_un_getUnFinishM"
			class="repairOrderAction" method="getUnFinishM">
			<result name="success">adminUnFinishRepair_ui.jsp</result>
		</action>
		
		<!-- system -->
		<action name="system_*"
			class="com.ilovecl.myproperty.struts.action.SystemAction" method="{1}">
			<result name="success">adminSystem_ui.jsp</result>
		</action>

		<action name="register" class="studentRegisterAction">
			<result name="success">/register.jsp</result>
			<result name="input">/register.jsp</result>
		</action>

		<action name="studentLogin" class="studentLoginAction">
			<result name="success">/index.jsp</result>
			<result name="input">/studentLogin.jsp</result>
		</action>

		<action name="propertyManagerLogin" class="propertyManagerLoginAction">
			<result name="success">/index.jsp</result>
			<result name="input">/propertyManagerLogin.jsp</result>
		</action>

		<action name="postRepairOrder" class="postRepairOrderAction">
			<result name="success">/index.jsp</result>
			<result name="input">/postRepairOrder.jsp</result>
			<!-- 定义文件上传拦截器 -->
			<interceptor-ref name="fileUpload">
				<!-- 设置文件上传大小 -->
				<param name="maximumSize">4096000</param>
			</interceptor-ref>
			<!-- 自定义了拦截器后必手动定义默认的拦截器，否则默认的拦截器不会被执行 -->
			<interceptor-ref name="defaultStack"></interceptor-ref>

		</action>

		<action name="testLookUpStudentRepairOrder" class="testLookUpStudentRepairOrderAction">
			<result name="success">/detailOfRepairOrder.jsp</result>
			<result name="input">/propertyManagerLogin.jsp</result>
		</action>

		<action name="testCancelRepairOrder" class="testCancelRepairOrderAction">
			<result name="success">/detailOfRepairOrder.jsp</result>
			<result name="input">/propertyManagerLogin.jsp</result>
		</action>

		<action name="testSignOffRepairOrder" class="testSignOffRepairOrderAction">
			<result name="success">/detailOfRepairOrder.jsp</result>
			<result name="input">/propertyManagerLogin.jsp</result>
		</action>

		<action name="testAddRemindRepairOrder" class="testAddRemindRepairOrderAction">
			<result name="success">/detailOfRepairOrder.jsp</result>
			<result name="input">/propertyManagerLogin.jsp</result>
		</action>

		<action name="testLookRemindRepairOrder" class="testLookRemindRepairOrderAction">
			<result name="success">/detailOfRepairOrder.jsp</result>
			<result name="input">/propertyManagerLogin.jsp</result>
		</action>

		<action name="testChangeInfo" class="testChangeInfoAction">
			<result name="success">/detailOfRepairOrder.jsp</result>
			<result name="input">/propertyManagerLogin.jsp</result>
		</action>
	</package>
</struts>