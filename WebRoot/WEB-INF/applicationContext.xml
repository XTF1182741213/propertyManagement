<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName">
			<value>com.mysql.jdbc.Driver</value>
		</property>
		<property name="url">
			<!-- 设置字符集，防止插入到数据库里时出现乱码 -->
			<value>jdbc:mysql://139.129.118.90:3306/myproperty?useUnicode=true&amp;characterEncoding=UTF-8</value>
		</property>
		<property name="username">
			<value>root</value>
		</property>
		<property name="password">
			<value>test</value>
		</property>
	</bean>
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">
					org.hibernate.dialect.MySQLDialect
				</prop>
			</props>
		</property>
		<property name="mappingResources">
			<list>
				<value>com/ilovecl/myproperty/model/Student.hbm.xml</value>
				<value>com/ilovecl/myproperty/model/PropertyManager.hbm.xml</value>
				<value>com/ilovecl/myproperty/model/RepairOrder.hbm.xml</value>
				<value>com/ilovecl/myproperty/model/StudentRepairOrder.hbm.xml</value>
				<value>com/ilovecl/myproperty/model/RemindRepairOrder.hbm.xml</value>
			</list>
		</property>
	</bean>

	<bean id="transactionManager"
		class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory">
			<ref local="sessionFactory" />
		</property>
	</bean>

	<bean id="baseTransactionProxy"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean"
		abstract="true">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="save*">PROPAGATION_REQUIRED</prop>
				<prop key="update*">PROPAGATION_REQUIRED</prop>
				<prop key="delete*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>



	<!-- 将学生DAO托给Spring -->
	<bean id="studentDAO" class="com.ilovecl.myproperty.DAO.impl.StudentDAO">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>

	<!-- 将物业管理员DAO托给Spring -->
	<bean id="propertyManagerDAO" class="com.ilovecl.myproperty.DAO.impl.PropertyManagerDAO">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>

	<!-- 将保障单DAO托给Spring -->
	<bean id="repairOrderDAO" class="com.ilovecl.myproperty.DAO.impl.RepairOrderDAO">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>

	<!-- 将学生和保障单对应表DAO托给Spring -->
	<bean id="studentRepairOrderDAO" class="com.ilovecl.myproperty.DAO.impl.StudentRepairOrderDAO">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>

	<!-- 将催单DAO托给Spring -->
	<bean id="remindRepairOrderDAO" class="com.ilovecl.myproperty.DAO.impl.RemindRepairOrderDAO">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>



	<!-- 注册业务逻辑 -->
	<bean id="registerService" parent="baseTransactionProxy">
		<property name="target">
			<bean class="com.ilovecl.myproperty.service.impl.RegisterService">
				<property name="studentDAO" ref="studentDAO" />
			</bean>
		</property>
	</bean>

	<!-- 登录业务逻辑 -->
	<bean id="loginService" parent="baseTransactionProxy">
		<property name="target">
			<bean class="com.ilovecl.myproperty.service.impl.LoginService">
				<property name="propertyManagerDAO" ref="propertyManagerDAO" />
				<property name="studentDAO" ref="studentDAO" />
			</bean>
		</property>
	</bean>

	<!-- 提交报修单业务逻辑 -->
	<bean id="postRepairOrderService" parent="baseTransactionProxy">
		<property name="target">
			<bean class="com.ilovecl.myproperty.service.impl.PostRepairOrderService">
				<property name="repairOrderDAO" ref="repairOrderDAO" />
			</bean>
		</property>
	</bean>

	<!-- 查看报修单业务逻辑 -->
	<bean id="lookUpRepairOrderService" parent="baseTransactionProxy">
		<property name="target">
			<bean class="com.ilovecl.myproperty.service.impl.LookUpRepairOrderService">
				<property name="repairOrderDAO" ref="repairOrderDAO" />
				<property name="studentDAO" ref="studentDAO" />
				<property name="studentRepairOrderDAO" ref="studentRepairOrderDAO" />
			</bean>
		</property>
	</bean>

	<!-- 取消报修单业务逻辑 -->
	<bean id="cancelRepairOrderService" parent="baseTransactionProxy">
		<property name="target">
			<bean class="com.ilovecl.myproperty.service.impl.CancelRepairOrderService">
				<property name="repairOrderDAO" ref="repairOrderDAO" />
				<property name="studentDAO" ref="studentDAO" />
				<property name="studentRepairOrderDAO" ref="studentRepairOrderDAO" />
			</bean>
		</property>
	</bean>

	<!-- 签收报修单业务逻辑 -->
	<bean id="signOffRepairOrderService" parent="baseTransactionProxy">
		<property name="target">
			<bean class="com.ilovecl.myproperty.service.impl.SignOffRepairOrderService">
				<property name="repairOrderDAO" ref="repairOrderDAO" />
				<property name="studentDAO" ref="studentDAO" />
				<property name="studentRepairOrderDAO" ref="studentRepairOrderDAO" />
			</bean>
		</property>
	</bean>

	<!-- 催单业务逻辑 -->
	<bean id="remindRepairOrderService" parent="baseTransactionProxy">
		<property name="target">
			<bean class="com.ilovecl.myproperty.service.impl.RemindRepairOrderService">
				<property name="remindRepairOrderDAO" ref="remindRepairOrderDAO" />
			</bean>
		</property>
	</bean>

	<!-- 学生个人信息管理业务逻辑 -->
	<bean id="persInfoManagService" parent="baseTransactionProxy">
		<property name="target">
			<bean class="com.ilovecl.myproperty.service.impl.PersInfoManagService">
				<property name="studentDAO" ref="studentDAO" />
			</bean>
		</property>
	</bean>




	<!-- 学生注册界面的Action -->
	<bean id="studentRegisterAction"
		class="com.ilovecl.myproperty.struts.action.StudentRegisterAction">
		<property name="iRegisterService" ref="registerService" />
	</bean>

	<!-- 学生登录界面的Action -->
	<bean id="studentLoginAction" class="com.ilovecl.myproperty.struts.action.StudentLoginAction">
		<property name="loginService" ref="loginService" />
	</bean>

	<!-- 物业管理员登录界面的Action -->
	<bean id="propertyManagerLoginAction"
		class="com.ilovecl.myproperty.struts.action.PropertyManagerLoginAction">
		<property name="loginService" ref="loginService" />
	</bean>

	<!-- 物业管理员登录界面的Action -->
	<bean id="postRepairOrderAction"
		class="com.ilovecl.myproperty.struts.action.PostRepairOrderAction">
		<property name="postRepairOrderService" ref="postRepairOrderService" />
	</bean>

	<!-- 查看报修单界面的Action -->
	<bean id="testLookUpStudentRepairOrderAction"
		class="com.ilovecl.myproperty.struts.action.TestLookUpStudentRepairOrderAction">
		<property name="lookUpRepairOrderService" ref="lookUpRepairOrderService" />
	</bean>

	<!-- 取消报修单界面的Action -->
	<bean id="testCancelRepairOrderAction"
		class="com.ilovecl.myproperty.struts.action.TestCancelRepairOrderAction">
		<property name="cancelRepairOrderService" ref="cancelRepairOrderService" />
	</bean>

	<!-- 签收报修单界面的Action -->
	<bean id="testSignOffRepairOrderAction"
		class="com.ilovecl.myproperty.struts.action.TestSignOffRepairOrderAction">
		<property name="signOffRepairOrderService" ref="signOffRepairOrderService" />
	</bean>

	<!-- 增加一条催单记录界面的Action -->
	<bean id="testAddRemindRepairOrderAction"
		class="com.ilovecl.myproperty.struts.action.TestAddRemindRepairOrderAction">
		<property name="remindRepairOrderService" ref="remindRepairOrderService" />
	</bean>

	<!-- 查阅一条催单记录界面的Action -->
	<bean id="testLookRemindRepairOrderAction"
		class="com.ilovecl.myproperty.struts.action.TestLookRemindRepairOrderAction">
		<property name="remindRepairOrderService" ref="remindRepairOrderService" />
	</bean>

	<!-- 修改基本信息界面的Action -->
	<bean id="testChangeInfoAction"
		class="com.ilovecl.myproperty.struts.action.TestChangeInfoAction">
		<property name="persInfoManagService" ref="persInfoManagService" />
	</bean>



	<!-- 报修单信息界面的Action -->
	<bean id="repairOrderAction" class="com.ilovecl.myproperty.struts.action.RepairOrderAction">
		<property name="lookUpRepairOrderService" ref="lookUpRepairOrderService" />
	</bean>

	<!-- 催单信息界面的Action -->
	<bean id="remindRepairOrderAction"
		class="com.ilovecl.myproperty.struts.action.RemindRepairOrderAction">
	</bean>

	<!-- 维修详情信息界面的Action -->
	<bean id="repairingManagerAction"
		class="com.ilovecl.myproperty.struts.action.RepairingManagerAction">
	</bean>

	<!-- 管理学生信息界面的Action -->
	<bean id="StudentManagerAction"
		class="com.ilovecl.myproperty.struts.action.StudentManagerAction">
	</bean>

	<!-- 提交报修单排行界面的Action -->
	<bean id="studentRankingAction"
		class="com.ilovecl.myproperty.struts.action.StudentRankingAction">
	</bean>

	<!-- 学生个人信息管理界面的Action -->
	<bean id="studentInfoManagement"
		class="com.ilovecl.myproperty.struts.action.StudentInfoManagement">
		<property name="persInfoManagService" ref="persInfoManagService" />
	</bean>
</beans>